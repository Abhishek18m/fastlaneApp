default_platform(:ios)

platform :ios do
  desc "Create app in App Store Connect (if it doesn't exist)"
  lane :create_app do
    app_identifier = "com.fastlaneApp.app"
    app_name = "FastlaneApp"
    
    begin
      produce(
        app_identifier: app_identifier,
        app_name: app_name,
        language: "English",
        app_version: "1.0",
        sku: "fastlane-app-#{Time.now.to_i}",
        team_id: "SWDT88G8UG"
      )
      UI.success "âœ… App created successfully in App Store Connect!"
    rescue => ex
      if ex.message.include?("already exists")
        UI.success "âœ… App already exists in App Store Connect"
      else
        UI.user_error!("âŒ Failed to create app: #{ex.message}")
      end
    end
  end

  desc "Push a new beta build to TestFlight"
  lane :beta do
    # Use Match in readonly mode - downloads certificates from git without Apple authentication
    # This only works if certificates are already in your Match git repository
    match(
      type: "appstore",
      readonly: true  # Only download from git, don't sync with Apple
    )
    update_code_signing_settings(
      use_automatic_signing: true,
      path: "FastlaneApp.xcodeproj",
      team_id: "SWDT88G8UG"
    )
    
    # Get current build number and increment it
    # If build 7 already exists in TestFlight, this will set it to 8
    current_build = get_build_number(xcodeproj: "FastlaneApp.xcodeproj")
    current_build_int = current_build.to_i
    
    # Ensure build number is at least 8 (since 7 already exists)
    # Then increment from there
    minimum_build = 8
    new_build = [current_build_int + 1, minimum_build].max.to_s
    
    UI.message "Current build: #{current_build}, New build: #{new_build}"
    
    # Set the new build number
    increment_build_number(
      xcodeproj: "FastlaneApp.xcodeproj",
      build_number: new_build
    )
    
    # Show what we're about to build
    UI.message "Building with workspace: FastlaneApp.xcworkspace"
    UI.message "Scheme: FastlaneApp"
    UI.message "Export method: app-store"
    
    # In CI, we need to use export_options with provisioning profile
    # because automatic signing doesn't work without Apple account in Xcode
    is_ci = ENV["CI"] == "true" || ENV["GITHUB_ACTIONS"] == "true"
    
    build_params = {
      workspace: "FastlaneApp.xcworkspace",
      scheme: "FastlaneApp",
      export_method: "app-store",
      disable_xcpretty: true,
      output_directory: "./build",
      build_path: "./build",
      buildlog_path: "./build_logs",
      xcargs: "-allowProvisioningUpdates"
    }
    
    # In CI, add export_options with provisioning profile from Match
    if is_ci
      provisioning_profile_mapping = lane_context[SharedValues::MATCH_PROVISIONING_PROFILE_MAPPING]
      provisioning_profile_name = provisioning_profile_mapping["com.fastlaneApp.app"] if provisioning_profile_mapping
      
      if provisioning_profile_name
        UI.message "ğŸ”§ CI detected - Using manual signing with profile: #{provisioning_profile_name}"
        build_params[:export_options] = {
          method: "app-store",
          teamID: "SWDT88G8UG",
          signingStyle: "manual",
          provisioningProfiles: {
            "com.fastlaneApp.app" => provisioning_profile_name
          }
        }
      else
        UI.important "âš ï¸  CI detected but no provisioning profile from Match - using automatic"
      end
    end
    
    build_app(build_params)
    
    # Get the IPA path from lane context (set by build_app)
    ipa_path = lane_context[SharedValues::IPA_OUTPUT_PATH]
    
    # Fallback to relative path if lane context doesn't have it
    if ipa_path.nil? || !File.exist?(ipa_path)
      ipa_path = "./build/FastlaneApp.ipa"
    end
    
    # Verify IPA file exists before uploading
    unless File.exist?(ipa_path)
      UI.user_error!("âŒ IPA file not found at #{ipa_path}. Build may have failed.")
    end
    
    file_size = File.size(ipa_path)
    UI.message "ğŸ“¦ IPA file found: #{ipa_path} (#{(file_size / 1024 / 1024).round(2)} MB)"
    
    # Check app-specific password format
    if ENV["FASTLANE_APPLE_APPLICATION_SPECIFIC_PASSWORD"]
      password = ENV["FASTLANE_APPLE_APPLICATION_SPECIFIC_PASSWORD"]
      if password.include?("{") || password.include?("}") || password.include?(" ")
        UI.important "âš ï¸  WARNING: App-specific password may contain invalid characters!"
        UI.message "ğŸ’¡ App-specific passwords should be a single string without spaces or special characters"
        UI.message "ğŸ’¡ Check your GitHub secret: FASTLANE_APPLE_APPLICATION_SPECIFIC_PASSWORD"
      end
    else
      UI.important "âš ï¸  WARNING: FASTLANE_APPLE_APPLICATION_SPECIFIC_PASSWORD not set!"
    end
    
    # Upload to TestFlight using App-Specific Password
    # Explicitly specify app identifier and username to avoid lookup issues
    UI.message "ğŸ” Authenticating with App Store Connect..."
    UI.message "ğŸ“± App Identifier: com.fastlaneApp.app"
    UI.message "ğŸ‘¤ Apple ID: appledeveloper@ditstek.com"
    UI.message "ğŸ¢ ITC Team ID: 122953061"
    
    begin
      upload_to_testflight(
        ipa: ipa_path,
        app_identifier: "com.fastlaneApp.app",  # Explicitly specify app
        username: "appledeveloper@ditstek.com",  # Explicitly specify username
        skip_waiting_for_build_processing: true,
        skip_submission: true,
        distribute_external: false,
        notify_external_testers: false
      )
      UI.success "âœ… Upload command completed"
    rescue => ex
      error_msg = ex.message.to_s
      
      if error_msg.include?("Couldn't find app") || error_msg.include?("not found")
        UI.important "âš ï¸  App lookup failed. This might be an authentication or permissions issue."
        UI.message ""
        UI.message "ğŸ” Troubleshooting steps:"
        UI.message "1. Verify the app exists: https://appstoreconnect.apple.com/apps"
        UI.message "2. Check that 'appledeveloper@ditstek.com' has access to the app"
        UI.message "3. Verify your app-specific password is correct"
        UI.message "4. Try using App Store Connect API Key instead (more reliable)"
        UI.message ""
        UI.user_error!("âŒ Upload failed: #{error_msg}")
      elsif error_msg.include?("Unauthorized") || error_msg.include?("Authentication")
        UI.user_error!("âŒ Authentication failed!\n\n" \
          "ğŸ’¡ Check your app-specific password:\n" \
          "1. Go to: https://appleid.apple.com/account/manage\n" \
          "2. Verify the app-specific password is correct\n" \
          "3. Make sure it has no spaces or special characters\n" \
          "4. Regenerate if needed\n\n" \
          "Error: #{error_msg}")
      else
        UI.user_error!("âŒ Upload failed: #{error_msg}")
      end
    end
    
    # Verify the upload was successful by checking if we can query the build
    UI.message "ğŸ” Verifying upload..."
    current_build = get_build_number(xcodeproj: "FastlaneApp.xcodeproj")
    
    begin
      # Wait a moment for the build to appear in the system
      sleep(10)
      
      # Try to get the latest build number to verify upload
      latest_build = latest_testflight_build_number(
        app_identifier: "com.fastlaneApp.app",
        initial_wait_time: 15,
        wait_timeout: 90
      )
      
      UI.success "âœ… Build #{current_build} uploaded successfully!"
      UI.message "ğŸ“± Latest build in TestFlight: #{latest_build}"
      
      if latest_build.to_i >= current_build.to_i
        UI.success "âœ… Your build (#{current_build}) is confirmed in TestFlight!"
      else
        UI.important "â³ Build #{current_build} is still processing. It may take 5-30 minutes to appear."
        UI.message "ğŸ’¡ Check App Store Connect: https://appstoreconnect.apple.com/apps"
      end
    rescue => ex
      UI.important "âš ï¸  Could not verify build status: #{ex.message}"
      UI.message ""
      UI.message "ğŸ“‹ Troubleshooting steps:"
      UI.message "1. Check App Store Connect Activity tab for upload history"
      UI.message "2. Verify your app-specific password is correct (no spaces/special chars)"
      UI.message "3. Check your email for any processing errors from Apple"
      UI.message "4. Wait 10-30 minutes and check TestFlight again"
      UI.message ""
      UI.message "ğŸ’¡ Direct link: https://appstoreconnect.apple.com/apps"
    end
  end

  desc "Build the IPA (without uploading)"
  lane :build do
    # Use Match in readonly mode - downloads certificates from git
    match(
      type: "adhoc",
      readonly: true  # Only download from git, don't sync with Apple
    )
    update_code_signing_settings(
      use_automatic_signing: true,
      path: "FastlaneApp.xcodeproj",
      team_id: "SWDT88G8UG"
    )
    build_app(
      workspace: "FastlaneApp.xcworkspace",
      scheme: "FastlaneApp",
      export_method: "ad-hoc",
      disable_xcpretty: true
    )
  end

  desc "Upload existing IPA to TestFlight"
  lane :upload do
    upload_to_testflight(
      ipa: "FastlaneApp.ipa",
      skip_waiting_for_build_processing: true,
      skip_submission: true
    )
  end

  desc "Check status of latest TestFlight build"
  lane :status do
    # Get the latest build number from TestFlight
    begin
      latest_build = latest_testflight_build_number(
        app_identifier: "com.fastlaneApp.app"
      )
      UI.success "âœ… Latest build number in TestFlight: #{latest_build}"
    rescue => ex
      UI.important "Could not fetch latest build number: #{ex.message}"
    end
    
    # Get current build number from project
    current_build = get_build_number(xcodeproj: "FastlaneApp.xcodeproj")
    UI.message "ğŸ“¦ Current build number in project: #{current_build}"
    
    UI.success "ğŸ’¡ To see detailed build status, check App Store Connect:"
    UI.message "   https://appstoreconnect.apple.com/apps"
  end
end
