default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    match(type: "appstore")
    increment_build_number(xcodeproj: "FastlaneApp.xcodeproj")
    build_app(workspace: "FastlaneApp.xcworkspace", scheme: "FastlaneApp")
    upload_to_testflight
  end

  desc "Build the IPA (without uploading)"
  lane :build do
    match(type: "appstore")
    build_app(
      workspace: "FastlaneApp.xcworkspace",
      scheme: "FastlaneApp",
      disable_xcpretty: true
    )
  end
end
