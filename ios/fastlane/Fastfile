default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    # Use App Store Connect API Key for authentication (required for CI/CD)
    api_key = nil
    if ENV["APP_STORE_CONNECT_KEY_ID"] && ENV["APP_STORE_CONNECT_ISSUER_ID"]
      api_key = app_store_connect_api_key(
        key_id: ENV["APP_STORE_CONNECT_KEY_ID"],
        issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
        key_content: ENV["APP_STORE_CONNECT_KEY_CONTENT"],
        key_filepath: ENV["APP_STORE_CONNECT_KEY_FILEPATH"]
      )
      match(type: "appstore", api_key: api_key)
    else
      # Fallback to username/password for local development
      match(type: "appstore")
    end
    update_code_signing_settings(
      use_automatic_signing: true,
      path: "FastlaneApp.xcodeproj",
      team_id: "SWDT88G8UG"
    )
    increment_build_number(xcodeproj: "FastlaneApp.xcodeproj")
    build_app(
      workspace: "FastlaneApp.xcworkspace",
      scheme: "FastlaneApp",
      export_method: "app-store",
      disable_xcpretty: true
    )
    # Upload to TestFlight using API Key if available, otherwise use App-Specific Password
    if api_key
      upload_to_testflight(
        api_key: api_key,
        skip_waiting_for_build_processing: true,
        skip_submission: true
      )
    else
      upload_to_testflight(
        skip_waiting_for_build_processing: true,
        skip_submission: true
      )
    end
  end

  desc "Build the IPA (without uploading)"
  lane :build do
    # Use App Store Connect API Key for authentication (required for CI/CD)
    if ENV["APP_STORE_CONNECT_KEY_ID"] && ENV["APP_STORE_CONNECT_ISSUER_ID"]
      api_key = app_store_connect_api_key(
        key_id: ENV["APP_STORE_CONNECT_KEY_ID"],
        issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
        key_content: ENV["APP_STORE_CONNECT_KEY_CONTENT"],
        key_filepath: ENV["APP_STORE_CONNECT_KEY_FILEPATH"]
      )
      match(type: "adhoc", api_key: api_key)
    else
      # Fallback to username/password for local development
      match(type: "adhoc")
    end
    update_code_signing_settings(
      use_automatic_signing: true,
      path: "FastlaneApp.xcodeproj",
      team_id: "SWDT88G8UG"
    )
    build_app(
      workspace: "FastlaneApp.xcworkspace",
      scheme: "FastlaneApp",
      export_method: "ad-hoc",
      disable_xcpretty: true
    )
  end

  desc "Upload existing IPA to TestFlight"
  lane :upload do
    upload_to_testflight(
      ipa: "FastlaneApp.ipa",
      skip_waiting_for_build_processing: true,
      skip_submission: true
    )
  end
end
